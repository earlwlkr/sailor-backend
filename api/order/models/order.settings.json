{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "subtotal": {
      "type": "decimal"
    },
    "total": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "note": {
      "type": "string"
    },
    "products": {
      "collection": "product"
    },
    "customer": {
      "model": "customer",
      "via": "orders"
    }
  }
}
